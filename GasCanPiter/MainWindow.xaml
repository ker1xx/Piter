<Window x:Class="GasCanPiter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GasCanPiter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите ID АЗС: " Grid.Row="0" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="25"/>
        <TextBox x:Name="AZS_ID" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="300" MinHeight="40" Margin="0,40,0,0"/>
        <TextBlock Text="Введите номер колонки: " Grid.Row="1" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="25"/>
        <TextBox x:Name="GasCan_ID" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="300" MinHeight="40" Margin="0,40,0,0"/>
        <Button x:Name="Start" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Content="Начать работу" Padding="15" Click="Start_Click"/>
        <Frame x:Name="MainPage" Grid.Row="0" Grid.RowSpan="3"/>
    </Grid>
</Window>
